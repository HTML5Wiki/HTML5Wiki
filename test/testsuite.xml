<!--
phpUnit configuration
-->
<phpunit bootstrap="./TestHelper.php">
	<testsuites>
		<testsuite name="Functional">
			<directory>Functional</directory>
		</testsuite>
		<testsuite name="Unit_Application">
			<directory>Unit/Application</directory>
		</testsuite>
		<testsuite name="Unit_Library">
			<directory>Unit/Library</directory>
		</testsuite>
		<testsuite name="Unit_Markdown">
			<directory>Unit/Markdown</directory>
		</testsuite>
	</testsuites>
	<filter>
		<blacklist>
			<directory suffix=".php">.</directory>
			<directory suffix=".php">../Library/Zend/</directory>
		</blacklist>
	</filter>
	<selenium>
		<browser name="Firefox on Debian" browser="*firefox"  host="selenium.openflex.net" port="4444" />
	</selenium>
</phpunit>
